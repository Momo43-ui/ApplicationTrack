# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
PORT=5000

# Database Configuration
# For local development with SQLite
# DATABASE_URL=sqlite:///applicationtrack.db

# For local development with PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/applicationtrack

# For production (fill with your actual values)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Security (generate a random secret key for production!)
SECRET_KEY=your-secret-key-here

# CORS - Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# Email Configuration (pour réinitialisation de mot de passe)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=votre-email@gmail.com
MAIL_PASSWORD=votre-mot-de-passe-app
MAIL_DEFAULT_SENDER=votre-email@gmail.com

